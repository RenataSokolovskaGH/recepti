{
   "openapi": "3.0.0",
   "info": {
      "title": "My Ideal Recipe",
      "contact": {
         "name": "Renata Sokolovska"
      },
      "version": "3.1.0"
   },
   "servers": [
      {
         "description": "Local",
         "url": "{schema}://localhost:3000/",
         "variables": {
            "schema": {
               "enum": [
                  "http"
               ],
               "default": "http"
            }
         }
      }
   ],
   "paths": {
      "/api/dashboard/get-recipes": {
         "post": {
            "tags": [
               "Dashboard"
            ],
            "summary": "Get recipes that match the prescribed conditions",
            "operationId": "getRecipes",
            "requestBody": {
               "content": {
                  "application/json": {
                     "schema": {
                        "$ref": "#/components/schemas/GetRecipesRequest"
                     }
                  }
               }
            },
            "responses": {
               "200": {
                  "description": "Success",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/GetRecipesResponse"
                        }
                     }
                  }
               },
               "400": {
                  "description": "Bad request",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/APIErrorResponse"
                        }
                     }
                  }
               }
            }
         }
      },
      "/api/dashboard/get-recipe-details": {
         "post": {
            "tags": [
               "Dashboard"
            ],
            "summary": "Get a full overview of a certain recipe",
            "operationId": "getRecipeDetails",
            "requestBody": {
               "content": {
                  "application/json": {
                     "schema": {
                        "$ref": "#/components/schemas/GetRecipeDetailsRequest"
                     }
                  }
               }
            },
            "responses": {
               "200": {
                  "description": "Success",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/GetRecipeDetailsResponse"
                        }
                     }
                  }
               },
               "400": {
                  "description": "Bad request",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/APIErrorResponse"
                        }
                     }
                  }
               }
            }
         }
      }
   },
   "components": {
      "schemas": {
         "APIErrorResponse": {
            "type": "object",
            "properties": {
               "title": {
                  "type": "string"
               },
               "message": {
                  "type": "string",
                  "description": "Fail message"
               },
               "code": {
                  "type": "number"
               }
            }
         },
         "GetRecipesRequest": {
            "type": "object",
            "properties": {
               "name": {
                  "type": "string",
                  "example": "Pizza meksikana"
               },
               "calories": {
                  "type": "number",
                  "format": "integer",
                  "example": 600
               },
               "dietFlag": {
                  "$ref": "#/components/schemas/DietFlag"
               },
               "isSweet": {
                  "type": "boolean",
                  "default": false
               },
               "ingredients": {
                  "type": "string",
                  "example": "tomato, mushrooms"
               }
            }
         },
         "GetRecipesResponse": {
            "type": "object",
            "properties": {
               "recipes": {
                  "type": "array",
                  "items": {
                     "$ref": "#/components/schemas/RecipeSchema"
                  }
               }
            }
         },
         "GetRecipeDetailsRequest": {
            "type": "object",
            "properties": {
               "recipeId": {
                  "type": "number",
                  "example": 27
               }
            }
         },
         "GetRecipeDetailsResponse": {
            "type": "object",
            "properties": {
               "recipeDetails": {
                  "$ref": "#/components/schemas/RecipeDetailsSchema"
               }
            }
         },
         "RecipeSchema": {
            "type": "object",
            "properties": {
               "recipeId": {
                  "type": "number",
                  "format": "integer",
                  "example": 27
               },
               "name": {
                  "type": "string",
                  "example": "Pizza meksikana"
               },
               "calories": {
                  "type": "number",
                  "format": "integer",
                  "example": 600
               },
               "dietFlag": {
                  "$ref": "#/components/schemas/DietFlag"
               },
               "avatar": {
                  "type": "string",
                  "example": "avatar url"
               },
               "isSweet": {
                  "type": "boolean",
                  "default": false
               },
               "ingredients": {
                  "type": "string",
                  "example": "tomato, mushrooms"
               }
            }
         },
         "RecipeDetailsSchema": {
            "allOf": [
               {
                  "$ref": "#/components/schemas/RecipeSchema"
               },
               {
                  "type": "object",
                  "properties": {
                     "description": {
                        "type": "string",
                        "example": "This is one beautiful recipe and you should definitely try it"
                     },
                     "makingProcedure": {
                        "type": "string",
                        "example": "This is a step by step guide how to make this wonderful meal"
                     }
                  }
               }
            ]
         },
         "DietFlag": {
            "type": "string",
            "enum": [
               "vegan",
               "vegetarian"
            ]
         }
      },
      "tags": [
         {
            "name": "Dashboard",
            "description": "Dashboard API"
         }
      ]
   }
}